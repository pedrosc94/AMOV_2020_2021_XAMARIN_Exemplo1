<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Exemplo1.MainPage">

    <StackLayout BackgroundColor="White">

        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Example 1" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        
        <Label Text="Text Input" HorizontalTextAlignment="Center" TextColor="Black" FontSize="24"/>
        <ScrollView Padding="25" HeightRequest="200">
            <Editor x:Name="editorTextInput" Placeholder="Insert Text" Text="" HorizontalOptions="Fill" FontSize="14" TextColor="Black"/>
        </ScrollView>
        
        <Label Text="Text Output" HorizontalTextAlignment="Center" TextColor="Black" FontSize="24"/>
        <ScrollView Padding="25" HeightRequest="200">
            <Label x:Name="editorTextOutput" VerticalOptions="Fill" FontSize="14" TextColor="Black"/>
        </ScrollView>

        <Button VerticalOptions="EndAndExpand" Clicked="ButtonTextInput_Clicked" Text="Apply" BackgroundColor="Gray" TextColor="White" FontSize="36"/>

    </StackLayout>

</ContentPage>
